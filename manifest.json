{
  "name": "PhaseOut",
  "version": "0.1",
  "manifest_version": 3,
  "minimum_chrome_version": "120",
  "description": "Uses in-browser face recognition to remove selected faces from websites.",
  "background": {
    "service_worker": "sw.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "userScripts"
  ],
  "host_permissions": ["https://example.com/*", "file:///*", "http://localhost/*", "http://127.0.0.1/*"],
  "action": {},
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
